<Window x:Class="WpfAppDemo.DataBindingDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDemo"
        mc:Ignorable="d"
        Title="DataBindingDemo" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <!--source-->
        <TextBox Name="txt1" Margin="10" Width="200" Height="50" Text="Text1"/>
        <!--target-->
        <TextBox Name="txt2" Margin="10" Width="200" Height="50" Text="{Binding Text, ElementName=txt1, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"/>
    </StackPanel>
</Window>
