<Window x:Class="WpfAppDemo.ElementBindingDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDemo"
        mc:Ignorable="d"
        Title="ElementBindingDemo" Height="450" Width="800">
    <StackPanel>
        <Ellipse Width="{Binding Value, ElementName=Slider1}" Height="{Binding Value, ElementName=Slider1}" Stroke="Red" StrokeThickness="3">
        </Ellipse>
        <Slider Name="Slider1" Minimum="50" Maximum="200"/>
    </StackPanel>
</Window>
